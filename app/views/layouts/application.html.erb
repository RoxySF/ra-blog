<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if alert %>
    <p class="alert bg-warning"><%= alert %></p>
  <% end %>
  <nav class="nav navbar-inverse">
    <% if user_signed_in? %>
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link btn btn-default' %> |
      <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link btn btn-default'  %>
      <div class="user-logged-in">
        Logged in as <strong><%= current_user.email %></strong>
      </div>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link btn btn-default'  %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link btn btn-default'  %>
    <% end %>
  </nav>
  <%= yield %>

</body>
</html>
